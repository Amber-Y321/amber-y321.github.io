source "https://rubygems.org"

# Jekyll version
gem "jekyll", "~> 4.2.0"

# Minimal Mistakes theme (Only needed if using the gem-based version)
gem "minimal-mistakes-jekyll"

# Required plugins
gem "jekyll-remote-theme"   # Allows GitHub Pages to load remote themes
gem "jekyll-include-cache"  # Required by Minimal Mistakes
gem "jekyll-sitemap"        # Generates a sitemap for SEO
gem "jekyll-seo-tag"        # Adds meta tags for SEO
gem "jekyll-archives"       # Creates archive pages
gem "jekyll-paginate"       # Enables pagination for blog posts

group :jekyll_plugins do
  gem "jekyll-feed"         # Generates an RSS feed
end
